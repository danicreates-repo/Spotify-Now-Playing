# Spotify API Configuration
REACT_APP_SPOTIFY_CLIENT_ID=your_client_id_here
REACT_APP_SPOTIFY_CLIENT_SECRET=your_client_secret_here
SPOTIFY_REFRESH_TOKEN=your_refresh_token_here

# Server Configuration
PORT=8888
NODE_ENV=production

# SSL Configuration (for HTTPS)
# Option 1: Use SSL certificates (for production HTTPS)
SSL_ENABLED=true
SSL_CERT_PATH=./ssl/fullchain.pem
SSL_KEY_PATH=./ssl/privkey.pem

# Option 2: For development/HTTP only (set SSL_ENABLED=false)
# SSL_ENABLED=false

# CORS Origins (comma-separated list)
# Add your domain(s) where the client will be hosted
CORS_ORIGINS=https://yourdomain.com,http://localhost:3000,http://127.0.0.1:3000

# API Base URL for client (optional - will auto-detect if not set)
# REACT_APP_API_BASE_URL=https://yourdomain.com:8888
